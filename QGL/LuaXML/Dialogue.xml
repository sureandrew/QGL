	<Font Name="Data\simsun.ttc" Width="14" Height="14" />
	<!-- main body -->
	<Panel Expand="1" Name="DialogueBox" X="210" Y="220" Image="Data\interface008_chat.tga" Hide="0"
		THeight="410"
		Left="410" Top="9" Right="790" Bottom="22" 
		LineRectLeft="410" LineRectTop="22" LineRectRight="790" LineRectBottom="42" LineCount="5" 
		BottomRectLeft="410" BottomRectTop="119" BottomRectRight="790" BottomRectBottom="131"
