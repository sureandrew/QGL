		<ChatPanel Name="DialogueChat" X="14" Y="15" Width="350" Height="70" EdgeCode="LIGHT" FontColor="FFFFFFFF"
			ShadowColor="FF000000" FillColor="7F0000FF" LuaLButtonDown="ClickNextMsg">
		</ChatPanel>
		
		<Button Name="DialogueUp" Image="Data\interface008_chat.tga" X="360" Y="10" Hide="1" LuaLButtonUp="DialogueScrollUp">
