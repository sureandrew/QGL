			<ButtonRect State="1" Left="377" Top="266" Right="391" Bottom="279" />
			<ButtonRect State="2" Left="393" Top="266" Right="407" Bottom="279" />
		</Button>

		<PopUpMenu Name="DialogueChoosePopup" X="14" Y="15" Hide="1" BarWidth="350" Row="5" Column="24" 
			EdgeCode="LIGHT" FontColor="FF00FF00" ShadowColor="FF000000"
			LinePitch=6 SelFontColor="FFFF0000"
			SelBarColor="00000000" LuaLButtonDown="DialogueChoose">
		</PopUpMenu>
	</Panel>
	<!-- npc image -->
	<Panel Name="DialogueImagePanel" X="210" Y="0" Left="0" Top="0" Right="220" Bottom="225">
		<UIImage Name="NPCPic"  X="0" Y="0" 
			NotDetected = "1"
			Left="0" Top="0" Right="220" Bottom="211" AutoDelete="1">
	</Panel>
